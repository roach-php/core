{
    "name": "roach-php/core",
    "description": "A complete web scraping toolkit for PHP",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Kai Sassnowski",
            "email": "me@kai-sassnowski.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.3",
        "jakeasmith/http_build_url": "^1.0.1",
        "league/container": "^3.0",
        "monolog/monolog": "^2.3",
        "psy/psysh": "^0.10.8",
        "spatie/browsershot": "^3.52",
        "spatie/robots-txt": "^2.0",
        "symfony/console": "^5.3 || ^6.0",
        "symfony/css-selector": "^5.3 || ^6.0",
        "symfony/dom-crawler": "^5.3 || ^6.0",
        "symfony/event-dispatcher": "^5.3 || ^6.0",
        "symfony/options-resolver": "^5.3 || ^6.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.15",
        "ergebnis/php-cs-fixer-config": "^3.0",
        "http-interop/http-factory-guzzle": "^1.2",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "slim/slim": "4.*",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.9"
    },
    "autoload": {
        "psr-4": {
            "RoachPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RoachPHP\\Tests\\": "tests/"
        }
    },
    "bin": [
        "roach"
    ],
    "scripts": {
        "post-install-cmd": [
            "composer normalize"
        ],
        "post-update-cmd": [
            "composer normalize"
        ],
        "analyze": [
            "vendor/bin/psalm"
        ],
        "coding-standards": [
            "mkdir -p .build/php-cs-fixer",
            "php-cs-fixer fix --diff --verbose"
        ],
        "test-server": [
            "php -S localhost:8000 -t ./tests/Server"
        ],
        "test-watch": [
            "vendor/bin/phpunit-watcher watch"
        ]
    }
}
